    }

    .whatsapp-btn {
        display: block;
        text-align: center;
        padding: 10px;
        background-color: #25D366;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        margin-top: 10px;
    }
</style>

<div class="posts">
    <% posts.reverse().forEach(function(elem){ %>
